<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Noah Patterson" %></title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js?ver=3.8.1"></script>
    <%= stylesheet_link_tag  "all" %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <%= stylesheet_link_tag "//cdn.jsdelivr.net/hint.css/1.3.0/hint.min.css" %>
    
  </head>
  
  <body class="<%= page_classes %>">
    <header>
      <div class="open-menu">
          <span class='open-btn circle-link'><i class=" fa fa-bars"></i></span>
          <span class="close-btn circle-link"><i class=" fa fa-times"></i></span>
      </div>

      <%= partial 'layouts/title_bar' %>

      <nav class="main-nav">
          <ul>
              <span class="link_to_example link_to_start hint--top ruby-style" data-hint="Example: Rails link_to">
                  <a href="http://api.rubyonrails.org/classes/ActionView/Helpers/UrlHelper.html#method-i-link_to" alt="Example of a rails link_to method">&lt%= link_to</a>
              </span>
              <li >
                  <!-- <button class='blog-link circle-link'>Blog</button> -->
                  <%= link_to("Blog", "/blog" , :class => 'circle-link blog-link') %>
                  <!-- <a class='circle-link' href="/blog">Blog</a> -->
              </li>
              <li>
                  <a class='circle-link' href="https://twitter.com/albinosquirrel" title="Noah Patterson's Twitter">
                      <i class="fa fa-twitter"></i>
                      <span class="label">Twitter</span>
                  </a>
              </li>
              <li>
                  <a class='circle-link' href="https://github.com/noahpatterson" title="Noah Patterson's Github">
                      <i class="fa fa-github"></i>
                      <span class="label">Github</span>
                  </a>
              </li>
              <li>
                  <a class='circle-link' href="mailto:n@noahpatterson.me" title="Noah Patterson's Email">
                      <i class="fa fa-envelope"></i>
                      <span class="label">Email</span>
                  </a>
              </li>
              <span class="link_to_example hint--top ruby-style" data-hint="Example: Rails link_to">
                  <a href="http://api.rubyonrails.org/classes/ActionView/Helpers/UrlHelper.html#method-i-link_to" alt="Example of a rails link_to method">%&gt</a>
              </span>
          </ul>
      </nav>
    </header>
    <div class="wrapper">
        <%= yield %>
    </div>
    <%= partial 'layouts/footer' %>
  </body>
  <%= javascript_include_tag  "all" %>
</html>
