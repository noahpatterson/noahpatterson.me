---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p class='num_of_pages'>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p class='blog_pagination'><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div class='blog-entries'>
  <ol>
    <% page_articles.each_with_index do |article, i| %>
  <% link_to article do %>
    <li class='blog-entry'>
      <h2><%= article.title %> <span class='article_date'><%= article.date.strftime('%b %e') %></span></h2>
      <!-- use article.summary(250) if you have Nokogiri available to show just
           the first 250 characters -->
      <%#= article.body %>
      <p><%= article.summary(200) %></p>
    </li>
  <% end %>
  <% end %>
  </ol>
</div>


<% if paginate %>
  <% if next_page %>
    <p class='blog_pagination'><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
